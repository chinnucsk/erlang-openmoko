export DISPLAY=:0.0
cd /media/card/erlang-openmoko/
erl -noshell \
    -boot start_sasl \
    -sname openmoko \
    +W w \
    -pa ebin \
    +K true \
    +A10 \
    -kernel inet_default_listen_options '[{sndbuf, 16384}, {recbuf, 4096}]' \
    -sasl errlog_type error \
    -sasl sasl_error_logger '{file,"openmoko-sasl.log"}' \
    -mnesia dir '"openmoko-openmoko-mnesia"' \
    -s openmoko
